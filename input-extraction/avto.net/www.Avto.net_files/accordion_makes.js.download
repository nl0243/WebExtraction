$(document).ready(function () {
    //toggle the component with class accordion_body
    $(".ResultsMenuAccordionHead").click(function () {
            $(this).next(".ResultsMenuAccordionBody").slideDown("slow",'swing');
            $(".ResultsMenuAccordionHead").hide();
            $(".ResultsMenuAccordionBody").show();
    });
    $(".ResultsMenuAccordionFoot").click(function () {
            $(".ResultsMenuAccordionBody").slideUp("slow",'swing');
			$(".ResultsMenuAccordionHead").show();
		 	$(".ResultsMenuAccordionBody").hide();
    });
});